<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.roka.ticketing">

    <uses-permission android:name="android.permission.INTERNET" />
    <application
        android:name=".application.TicketApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <meta-data
            android:name="io.fabric.ApiKey"
            android:value="beda065c4ae5463578599a0d4dcce98be4de1042"
            />

        <activity
            android:name=".home.MainActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ticket.TicketActivity"
            android:label="@string/ticket_manifest_label"
            android:theme="@style/CustomNoActionBar" />

        <activity
            android:name=".ticket.PassengerActivity"
            android:label="Passengers" />

        <activity
            android:name=".ticketlisting.TicketListingActivity"
            android:theme="@style/Theme.Design.NoActionBar" />
        <activity
            android:name=".ticketdetail.TicketDetailActivity"
            android:theme="@style/Theme.Design.NoActionBar" />

        <activity
            android:name=".calendar.CalendarActivity"
            android:label="Calendar" />

        <activity
            android:name=".inputpassenger.InputPassengerActivity"
            android:label="Input Passenger Data" />

        <activity
            android:name=".bookticket.BookTicketActivity"
            android:label="Book Ticket" />
    </application>

</manifest>