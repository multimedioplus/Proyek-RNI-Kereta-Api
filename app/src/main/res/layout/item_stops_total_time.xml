<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <com.mikepenz.iconics.view.IconicsImageView
            android:id="@+id/iv_ticketdetail_stops_facilities_takeoff"
            android:layout_marginLeft="16dp"
            android:layout_width="48dp"
            android:layout_height="1dp"
            android:layout_centerVertical="true"
            app:iiv_size="24dp"
            app:iiv_color="@color/colorPrimary"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_toRightOf="@id/iv_ticketdetail_stops_facilities_takeoff"
            android:padding="8dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="16dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="normal"
                android:textColor="@color/black"
                android:visibility="gone"
                android:text="Soekarno Hatta Intl"
                android:textSize="14sp"/>

            <TextView
                android:id="@+id/iv_ticketdetail_stops_total_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="normal"
                android:textColor="@color/black"
                android:text="Total Duration 1h 50m"
                android:textSize="14sp"/>
        </LinearLayout>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:background="@color/black"/>
</LinearLayout>