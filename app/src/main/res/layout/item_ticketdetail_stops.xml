<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <com.mikepenz.iconics.view.IconicsImageView
            android:id="@+id/iv_ticketdetail_stops_facilities_takeoff"
            android:layout_marginLeft="16dp"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_centerVertical="true"
            app:iiv_size="24dp"
            app:iiv_color="@color/colorPrimary"
            app:iiv_icon="gmd-flight-takeoff"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_toRightOf="@id/iv_ticketdetail_stops_facilities_takeoff"
            android:padding="8dp"
            android:layout_marginLeft="16dp">
            <TextView
                android:id="@+id/iv_ticketdetail_stops_facilities_takeoff_from"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="normal"
                android:textColor="@color/black"
                android:text="Jakarta (CGK)"
                android:textSize="14sp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="normal"
                android:textColor="@color/black"
                android:visibility="gone"
                android:text="Soekarno Hatta Intl"
                android:textSize="14sp"/>
            <TextView
                android:id="@+id/iv_ticketdetail_stops_facilities_takeoff_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="normal"
                android:textColor="@color/gray"
                android:text="19 Oct, 13.30"
                android:textSize="14sp"/>
            <TextView
                android:id="@+id/iv_ticketdetail_stops_facilities_duration"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="normal"
                android:textColor="@color/black"
                android:text="Total Duration 1h 50m"
                android:textSize="14sp"/>
        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <com.mikepenz.iconics.view.IconicsImageView
            android:id="@+id/iv_ticketdetail_stops_facilities_landing"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginLeft="16dp"
            android:layout_centerVertical="true"
            app:iiv_size="24dp"
            app:iiv_color="@color/colorPrimary"
            app:iiv_icon="gmd-flight-land"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_toRightOf="@id/iv_ticketdetail_stops_facilities_landing"
            android:padding="8dp"
            android:layout_marginLeft="16dp"
            android:layout_marginBottom="8dp">
            <TextView
                android:id="@+id/iv_ticketdetail_stops_facilities_landing_to"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="normal"
                android:textColor="@color/black"
                android:text="Surabaya (SUB)"
                android:textSize="14sp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="normal"
                android:textColor="@color/black"
                android:text="Juanda Intl"
                android:visibility="gone"
                android:textSize="14sp"/>
            <TextView
                android:id="@+id/iv_ticketdetail_stops_facilities_landing_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="normal"
                android:textColor="@color/gray"
                android:text="19 Oct, 15.20"
                android:textSize="14sp"/>
        </LinearLayout>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:background="@color/black"/>
</LinearLayout>